<div class="container">
  <h1>Cocktails</h1>
  <div class="cocktails">
    <% @cocktails.each do |cocktail| %>
      <div class="cocktail">
        <p> <%= link_to cocktail.name, cocktail_path(cocktail.id) %> </p>
      </div>
    <% end %>
  </div>
  <%= link_to "Make a new cocktail", new_cocktail_path, class: "btn btn-primary" %>
</div>
