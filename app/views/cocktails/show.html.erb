<div class="wrapper">
  <div class="container">
    <h1><%= @cocktail.name %></h1>
    <%= link_to "Back", cocktails_path, class: "btn btn-success" %>
    <div class="ingredients">
      <div class="add-ingredients">
        <h3>Add ingredients</h3>
        <%= simple_form_for [@cocktail, @dose] do |f| %>
          <%= f.association :ingredient %>
          <%= f.input :description %>
          <%= f.submit "Add", class: "btn btn-success full-width" %>
        <% end %>
      </div>
      <div class="spacer">

      </div>
      <div class="current-ingredients">
        <h3>Recipe</h3>
        <% @cocktail.doses.each do |dose| %>
          <div class="ingredient">
            <p><%= dose.description %> <%= dose.ingredient.name %>
              <%= link_to "Remove", dose_path(dose.id), method: :delete %>
            </p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
